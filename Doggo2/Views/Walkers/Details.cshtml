@model Doggo2.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}
<section>
<div>
    <h1 class="mb-4">Walker Profile</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src=@Model.Walker.ImageUrl />

        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">NeighborhoodId:</label>
            <span>@Model.Walker.NeighborhoodId</span>
        </div>

    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

     <div class="row">
            <section class="col-lg-8 mt-5">
                <h1 class="text-left">Walks</h1>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Client</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Walk walk in Model.Walks)
                        {
                            <tr>
                                <td>@walk.Date</td>
                                <td>@walk.Dog.Owner.Name</td>
                                <td>@(walk.Duration / 60) min</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>

            <section class="col-lg-4 col-md-8 container mt-5">
                <h1>Total Walk Time</h1>
                <h3 class="text-info">@Model.TotalTimeWalkedDisplay</h3>
            </section>
        </div>
    </section>



