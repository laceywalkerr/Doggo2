@model Doggo2.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1 class="mb-4">"Walker Profile"</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src=@Model.Walker.ImageUrl />

        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">NeighborhoodId:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>

    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Dogs</h1>

            <div class="row">
                @foreach (Walk walk in Model.Walks)
                {
                    <div class="card m-4" style="width: 18rem;">

                        <div class="card-body">
                            <div>
                                <label class="font-weight-bold">Date:</label>
                                <span>@Model.Walk.Date</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Client:</label>
                                <span>@Model.Dog.Name</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Duration:</label>
                                <p>@Model.Walk.Duration</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

